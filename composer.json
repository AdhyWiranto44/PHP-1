{
    "name": "bellshade/php",
    "description": "Referensi materi dasar dan implementasi algoritma untuk developer PHP",
    "type": "project",
    "license": "MIT",
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "phpcs": "phpcs . --ignore=*/vendor/*,*/tests/* --warning-severity=0 --colors --standard=phpcs.ruleset.xml",
        "phpcbf": "phpcbf . --ignore=*/vendor/*,*/tests/* --standard=phpcs.ruleset.xml",
        "phpunit": "phpunit tests/"
    }
}
